{% for element in content %}
    {% case element.type %}
      {% when "css" %}
        {{ element.text }}
      {% when "gallery" %}
        {% render 'gallery_element_css_snippet',
                  gallery:element,
                  dimensions:dimensions,
                  size:size,
                  index:forloop.index %}
      {% when "image" %}
        {% render 'image_css_snippet',
                  image:element.details,
                  index:forloop.index,
                  id:element.id,
                  dimensions:dimensions,
                  size:size %}
      {% when "inset" %}
        {% render 'image_css_snippet',
                  image:element.details,
                  index:forloop.index,
                  id:element.id,
                  dimensions:dimensions,
                  size:size %}
    {% endcase %}
{% endfor %}

