a:hover > span.tooltiptext {visibility: visible; animation-name: tooltip; animation-duration: 3s;}

@keyframes tooltip {
  0% {opacity: 0.0}
  99% {opacity: 0.0}
  100% {opacity: 1.0}
}

.tooltip {
  position: relative;
 }

.tooltiptext {
  visibility: hidden;
  width: 160px;
  background-color: {{ colours.body }};
  border: 1px solid {{ colours.here }};
  color: {{ colours.here }};
  text-align: center;
  padding: 5px 0px;
  border-radius: 6px;
  position: absolute;
  z-index: 1;
  margin-left: -80px;
  left: 50%;
  top: 10%;
}
