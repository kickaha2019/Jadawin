{% if image and id %}
{% case size %}
{% when 0 %}
#{{ id }} {width: {{ image.dims[0][0]}}px; height: {{ image.dims[0][1]}}px}
{% when 1 %}
{% if image.dims[1][0] != image.dims[0][0] %}
#{{ id }} {width: {{ image.dims[1][0]}}px; height: {{ image.dims[1][1]}}px}
{% endif %}
{% when 2 %}
{% if image.dims[2][0] != image.dims[1][0] %}
#{{ id }} {width: {{ image.dims[2][0]}}px; height: {{ image.dims[2][1]}}px}
{% endif %}
{% when 3 %}
{% if image.dims[3][0] != image.dims[2][0] %}
#{{ id }} {width: {{ image.dims[3][0]}}px; height: {{ image.dims[3][1]}}px}
{% endif %}
{% endcase %}
{% endif %}
