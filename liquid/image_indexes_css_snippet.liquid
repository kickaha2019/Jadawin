{% if image_index %}

{% case size %}
{% when 0 %}
.image_indexes {display: none;
               flex-flow: row wrap;
               justify-content: space-between;
               align-items: flex-start;
               align-content: flex-start;
               max-width: 100%;}
{% render 'tooltip_css_snippet' with colours:colours %}
{% when 1 %}
.image_indexes {display: flex}
{% endcase %}

.image_index {width: {{ image_index.dims[size][0]}}px; height: {{ image_index.dims[size][1]}}px}
{% endif %}

