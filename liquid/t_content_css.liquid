{% for element in content %}
    {% case element.type %}
      {% when "css" %}
        {{ element.text }}
      {% when "gallery" %}
        {% render 'gallery_element_css_snippet',
                  gallery:element,
                  dimensions:dimensions,
                  size:size,
                  index:forloop.index %}
      {% when "heading" %}
        {% render 't_heading_css', colours:colours, heading:element %}
      {% when "image" %}
        {% render 't_image_css', image:element.details, id:element.id, dimensions:dimensions, size:size %}
      {% when "inset" %}
        {% render 't_image_css', image:element.details, id:element.id, dimensions:dimensions, size:size %}
      {% when "svg" %}
        {% render 't_svg_css', widths:widths, svg:element, dimensions:dimensions, size:size %}
      {% when "table" %}
        {% render 't_table_css', table:element, size:size %}
    {% endcase %}
{% endfor %}

