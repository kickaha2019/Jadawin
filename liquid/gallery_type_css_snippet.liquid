{% case size %}
{% when 0 %}
.gallery {width: 98%; padding-left: 5px; padding-bottom: 15px;
          display: flex; flex-flow: row wrap; align-items: flex-start;
          justify-content: space-between}
.gallery img {padding-top: 0px}
.gallery div {padding: 9px; padding-top: 0px; padding-bottom: 5px;
              display: flex; flex-flow: column nowrap; align-items: center;
              width: 128px; justify-content: center}
.gallery div div {text-align: center; padding: 0px}
{% when 2 %}
  .gallery div {width: 196px}
{% when 3 %}
  .gallery div {width: 244px}
{% endcase %}
