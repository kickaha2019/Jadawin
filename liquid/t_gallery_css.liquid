{% if gallery.index < 2 %}
{% case size %}
{% when 0 %}
.gallery {width: 98%; padding-left: 5px; padding-bottom: 15px;
          display: flex; flex-flow: row wrap; align-items: flex-start;
          justify-content: space-between}
.gallery img {padding-top: 0px}
.gallery div {padding: 9px; padding-top: 0px; padding-bottom: 5px;
              display: flex; flex-flow: column nowrap; align-items: center;
              width: 128px; justify-content: center}
.gallery div div {text-align: center; padding: 0px}
{% when 2 %}
  .gallery div {width: 196px}
{% when 3 %}
  .gallery div {width: 244px}
{% endcase %}
{% endif %}

{% case size %}
{% when 0 %}
.G{{ gallery.index }} {width: {{ gallery.dims[0][0]}}px; height: {{ gallery.dims[0][1]}}px}
{% when 1 %}
{% if gallery.dims[1][0] != gallery.dims[0][0] %}
.G{{ gallery.index }} {width: {{ gallery.dims[1][0]}}px; height: {{ gallery.dims[1][1]}}px}
{% endif %}
{% when 2 %}
{% if gallery.dims[2][0] != gallery.dims[1][0] %}
.G{{ gallery.index }} {width: {{ gallery.dims[2][0]}}px; height: {{ gallery.dims[2][1]}}px}
{% endif %}
{% when 3 %}
{% if gallery.dims[3][0] != gallery.dims[2][0] %}
.G{{ gallery.index }} {width: {{ gallery.dims[3][0]}}px; height: {{ gallery.dims[3][1]}}px}
{% endif %}
{% endcase %}
